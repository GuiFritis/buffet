@*@model PWA_Buffet_Williane.ViewModels.Acesso.*@

@{ ViewData["Title"] = "Recuperação de Conta"; }

<div class="container-fluid corpo">
    <div class="row justify-content-md-center h-100 p-5">
        <div class="card-wrapper">
            <div class="brand text-center">
                <h1 class="logo-badge text-whitesmoke"><span class="fa fa-user-circle"></span></h1>
            </div>
            <div class="card fat">
                <div class="card-body">

                    <h4 style="text-align:center;margin-bottom:40px"> @ViewData["Title"] </h4>

                    <form method="POST" class="my-login-validation" asp-controller="Acesso" asp-action="Login">

                        <div class="form-group" style="margin-bottom:30px">

                            <label @*asp-for="Email"*@> Insira o e-mail cadastrado </label>

                            <input @*asp-for="Email"*@ type="text" class="form-control" name="Email" required="" autofocus="">

                        </div>

                        <div class="form-group m-0">
                            <button type="submit" class="btn btn-success btn-block" name="Recover" onclick="alert('Procedimento para recuperação de conta enviado para o e-mail informado.')"> Enviar </button>
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <a class="btn btn-success btn-block" asp-area="" asp-controller="Acesso" asp-action="Login"> Voltar ao Login </a>
                    </div>

                    <div class="mt-4 text-center">
                        <a class="btn btn-success btn-block" asp-area="" asp-controller="Acesso" asp-action="Cadastro"> Cadastrar Conta </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
