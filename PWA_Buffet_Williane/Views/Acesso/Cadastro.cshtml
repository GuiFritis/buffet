@model PWA_Buffet_Williane.ViewModels.Acesso.CadastroViewModel

@{ ViewData["Title"] = "Cadastro"; }

<div class="container-fluid corpo">
    <div class="row justify-content-md-center h-100 p-5">
        <div class="card-wrapper">
            <div class="brand text-center">
                <h1 class="logo-badge text-whitesmoke"><span class="fa fa-user-circle"></span></h1>
            </div>
            <div class="card fat">
                <div class="card-body">

                    <h4 style="text-align:center;margin-bottom:40px"> @ViewData["Title"] </h4>

                    <div class="form-group" style="margin-bottom:30px">
                        @if (Model.ErroCadastro != null)
                         {
                            <ul>
                                @foreach (var erro in Model.ErroCadastro)
                                 {
                                    <li> @erro  </li>
                                 } 
                            </ul>
                         }
                    </div>

                    <form method="POST" class="my-login-validation" asp-controller="Acesso" asp-action="Cadastro">

                        <div class="form-group">

                            <label for="Email"> Email </label>

                            <input id="Email" type="text" class="form-control" name="Email" required="" autofocus="">

                        </div>

                        <div class="form-group" style="margin-bottom:30px">

                            <label for="Senha"> Senha </label>

                            <div style="position:relative" id="eye-password-0">

                                <input id="Senha" type="password" class="form-control" name="Senha" required="" data-eye="" style="padding-right: 60px;">

                            </div>

                        </div>

                        <div class="form-group" style="margin-bottom:30px">

                            <label for="ConfirmarSenha"> Confirme a Senha </label>

                            <div style="position:relative" id="eye-password-0">

                                <input id="ConfirmarSenha" type="password" class="form-control" name="ConfirmarSenha" required="" data-eye="" style="padding-right: 60px;">

                            </div>

                        </div>

                        <div class="form-group" style="margin-bottom:30px">
                            @if (Model.ErroSenha != null)
                            {<p class="form-group mt-4"> @Model.ErroSenha </p>}
                        </div>

                        <div class="form-group m-0">
                            <button type="submit" class="btn btn-success btn-block" name="Cadastrar"> Cadastrar </button>
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <a class="btn btn-success btn-block" asp-area="" asp-controller="Acesso" asp-action="Login"> Voltar ao Login </a>
                    </div>

                    <div class="mt-4 text-center">
                        <a class="btn btn-success btn-block" asp-area="" asp-controller="Acesso" asp-action="RecuperarConta"> <i class="icofont-email"></i> Recuperar Conta </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
