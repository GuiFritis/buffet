@model PWA_Buffet_Williane.ViewModels.Buffet.TipoEvento.TipoEventoViewModel

@{
    ViewData["Title"] = "Lista";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

@if (Model.MsgErro != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <p>@Model.MsgErro</p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.MsgSucesso != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <p>@Model.MsgSucesso</p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<h1>Lista de Tipos de Evento</h1>

<p>
    <a class="btn btn-success" asp-action="CadastraTipoEvento"> Cadastrar Novo Tipo de Evento <i class="icofont-plus-circle"></i> </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Descrição
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ListaTiposDeEvento) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a class="text-success" asp-action="Editar" asp-route-id="@item.Id" title="Editar"><i class="icofont-eye-alt"></i></a> /
                <a class="text-danger" asp-action="Deletar" asp-route-id="@item.Id" title="Deletar"><i class="icofont-ui-delete"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
