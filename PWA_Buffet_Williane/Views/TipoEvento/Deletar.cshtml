@model PWA_Buffet_Williane.ViewModels.Buffet.TipoEvento.TipoEventoViewModel

@{
    ViewData["Title"] = "Deletar";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

@if (Model.MsgErro != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <p>@Model.MsgErro</p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.MsgSucesso != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <p>@Model.MsgSucesso</p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<h1> Deletar Tipo de Evento </h1>

<h3>Deseja realmente deletar esse tipo de evento?</h3>
<div>
    <h4>Tipo de Evento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoEvento.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Deletar">
        <input type="hidden" asp-for="TipoEvento.Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a class="btn btn-success" asp-action="ListaTiposDeEvento">Voltar para a lista</a>
    </form>
</div>
