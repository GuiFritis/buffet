@model PWA_Buffet_Williane.ViewModels.Buffet.Cliente.ClienteViewModel

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

@if (Model.MsgErro != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <p>@Model.MsgErro</p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


@if (Model.MsgSucesso != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <p>@Model.MsgSucesso</p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<h1> Cadastro de Cliente </h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="formPF" asp-action="CadastraCliente">
            <div class="text-danger"></div>
            <div class="form-group">
                <label class="control-label form-check-inline"> Tipo de Cliente </label>
                <input class="form-check-input-inline" type="radio" name="TipoCliente" id="Pessoa Física" value="Pessoa Física" onchange="mudaCampos('PF')" required/>
                <label class="form-check-label-inline" for="TipoCliente"> PF </label>
                <input class="form-check-input-inline" type="radio" name="TipoCliente" id="Pessoa Jurídica" value="Pessoa Jurídica" onchange="mudaCampos('PJ')" required/>
                <label class="form-check-label-inline" for="TipoCliente"> PJ </label>
            </div>
            <div class="form-group">
                <label for="Nome" class="control-label"> Nome </label>
                <input type="text" name="Nome" id="Nome" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Email" class="control-label"> E-mail </label>
                <input type="email" name="Email" id="Email" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Endereco" class="control-label"> Endereço </label>
                <input type="text" name="Endereco" id="Endereco" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Observacoes" class="control-label"> Observações </label>
                <textarea name="Observacoes" id="Observacoes" class="form-control"></textarea>
            </div>
            
            <div class="form-group">
                <label for="CPF" class="control-label"> CPF </label>
                <input type="text" name="CPF" id="CPF" minlength="11" maxlength="11" class="form-control cpf" required />
            </div>
            <div class="form-group">
                <label for="DataNasc" class="control-label"> Data de Nascimento </label>
                <input type="date" name="DataNasc" id="DataNasc" class="form-control" required />
            </div>
           
            <div class="form-group">
                <label for="CNPJ" class="control-label"> CNPJ </label>
                <input type="text" minlength="14" maxlength="14" name="CNPJ" id="CNPJ" class="form-control cnpj" required/>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
        
    </div>
</div>

<div>
    <a class="btn btn-success" asp-action="ListaCliente">Voltar para a lista</a>
</div>

<script type="text/javascript" lang="js">

    function mudaCampos(tipo){
        if(tipo === 'PF'){
            $("#CPF").prop('disabled', false).prop('readonly', false);
            $("#DataNasc").prop('disabled', false).prop('readonly', false);
            $("#CNPJ").prop('disabled', true).prop('readonly', true);
        }else{
            $("#CPF").prop('disabled', true).prop('readonly', true);
            $("#DataNasc").prop('disabled', true).prop('readonly', true);
            $("#CNPJ").prop('disabled', false).prop('readonly', false);
        }
    }

</script>
